<!-- coworking_space/views/coworking_space_views.xml -->
<odoo>
    <!-- Tree View -->
    <record id="view_coworking_space_tree" model="ir.ui.view">
        <field name="name">coworking.space.tree</field>
        <field name="model">coworking.space</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="availability"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_coworking_space_kanban" model="ir.ui.view">
        <field name="name">coworking.space.kanban</field>
        <field name="model">coworking.space</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><t t-esc="record.name.value"/></strong>
                            <div><t t-esc="record.location.value"/></div>
                            <div>Capacity: <t t-esc="record.capacity.value"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_coworking_space_form" model="ir.ui.view">
        <field name="name">coworking.space.form</field>
        <field name="model">coworking.space</field>
        <field name="arch" type="xml">
            <form string="Coworking Space">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="location"/>
                        <field name="capacity"/>
                        <field name="amenities"/>
                        <field name="availability"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
